{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "rootDir": "./src",
        "moduleResolution": "node",
        "paths": {
            "*": ["./node_modules/*"]
        },
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
